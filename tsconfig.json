{
    "compilerOptions": {
        // required
        "jsx": "react",
        "jsxFactory": "Roact.createElement",
        "module": "commonjs",
        "moduleResolution": "Node",
        "noLib": true,
        "forceConsistentCasingInFileNames": false,
        "allowSyntheticDefaultImports": true,
        "moduleDetection": "force",
        "strict": true,
        "target": "ESNext",
        "typeRoots": [
            "node_modules/@rbxts",
        ],
        // configurable
        "rootDir": "src",
        "outDir": "out",
        "baseUrl": "src",
        "incremental": true,
        "tsBuildInfoFile": "out/tsconfig.tsbuildinfo"
    }
}